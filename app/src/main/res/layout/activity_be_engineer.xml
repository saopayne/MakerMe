<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ieeemadc.saopayne.tracchis.com.makerme.BeEngineerActivity">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />

    <ieeemadc.saopayne.tracchis.com.makerme.views.CustomTextView
        android:id="@+id/be_eng_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="3dp"
        android:layout_below="@id/tool_bar"
        android:paddingRight="3dp"
        android:paddingTop="5dp"
        android:background="@drawable/card_background"
        android:text="Pick one to determine which engineering field best suits you."
        android:textSize="20sp"
        android:textColor="#000"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="3dp"
        android:paddingTop="3dp"
        android:layout_below="@id/be_eng_header"
        >

        <TextView
            android:id="@+id/be_eng_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:text="Do you like fiddling with things?"
            android:textSize="18sp"
            android:paddingBottom="4dp"
            android:textColor="#000"
            android:textStyle="normal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/be_eng_answer_a">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                />

            <ieeemadc.saopayne.tracchis.com.makerme.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Sure"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/be_eng_answer_b">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                />

            <ieeemadc.saopayne.tracchis.com.makerme.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Sure"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/be_eng_answer_c">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                />

            <ieeemadc.saopayne.tracchis.com.makerme.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Sure"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/be_eng_answer_d">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                />

            <ieeemadc.saopayne.tracchis.com.makerme.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not Sure"/>
        </LinearLayout>

        <ieeemadc.saopayne.tracchis.com.makerme.views.CustomButton
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:background="@drawable/button_custom"/>

        </LinearLayout>



</RelativeLayout>
